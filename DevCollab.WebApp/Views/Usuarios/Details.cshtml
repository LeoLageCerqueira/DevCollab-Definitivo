@model DevCollab.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Perfil</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Nome)*@ Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.CaminhoFotoPerfil)*@ Foto
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.CaminhoFotoPerfil" style="max-width:350px; height:auto" />
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Descricao)*@ Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
</div>
